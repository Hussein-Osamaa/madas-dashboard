PORT=4000
NODE_ENV=development

MONGODB_URI=mongodb://localhost:27017/madas

JWT_ACCESS_SECRET=change-me-in-production
JWT_REFRESH_SECRET=change-me-in-production-refresh
JWT_ACCESS_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# S3-compatible storage (optional; local uploads work without)
# S3_ENDPOINT=
# S3_REGION=auto
# S3_BUCKET=madas-storage
# S3_ACCESS_KEY_ID=
# S3_SECRET_ACCESS_KEY=
# S3_PUBLIC_URL=http://localhost:4000/storage

CORS_ORIGIN=*

RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX=100

# Warehouse / Reports
BASE_URL=http://localhost:4000
REPORTS_DIR=./uploads/reports

# SMTP (for report notifications)
# SMTP_HOST=smtp.example.com
# SMTP_PORT=587
# SMTP_USER=
# SMTP_PASS=
# SMTP_FROM=noreply@digix.com

# WhatsApp (Meta Cloud API, optional)
# WHATSAPP_ACCESS_TOKEN=
# WHATSAPP_PHONE_ID=

# Migration (Firebase to MongoDB) – required when running npm run migrate
# Download from Firebase Console → Project Settings → Service Accounts → Generate new private key
GOOGLE_APPLICATION_CREDENTIALS=/absolute/path/to/your-project-service-account.json
# DRY_RUN=true
