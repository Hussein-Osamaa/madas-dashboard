    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.6",
    "@types/multer": "^1.4.11",
    "@types/node": "^20.14.0",
    "@types/node-cron": "^3.0.11",
    "@types/nodemailer": "^7.0.10",
    "@types/pdfkit": "^0.17.5",
    "@types/uuid": "^9.0.8",
    "ts-node": "^10.9.2",
